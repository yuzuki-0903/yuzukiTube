

<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	<div class="body-sign">
		<div class="up-box">
			<div class="logo-edit-triangle"></div>
				<h2 class= "user-edit-header">マイページ</h2>
					<form class="user-edit-container">
						<%= form_for(@user) do |f| %>
						<div class="family_name_field">
							<h5>姓</h5>
							<%= f.text_field :family_name,class: "family_name_up_field" %>
						</div>

			            <div class="first_name_field">
						<h5>名</h5>
							<%= f.text_field :name,class: "family_name_up_field" %>
					    </div>

					    <div class="family_kana_field">
							<h5>セイ</h5>
							<%= f.text_field :family_kana,class: "family_kana_up_field"  %>
						</div>

						<div class="first_kana_field">

							<h5>メイ</h5>
							<%= f.text_field :first_kana,class: "first_kana_up_field" %>
					    </div>

					
						<div class="email_up_field">
						　　<h4>email</h4>
							<%= f.text_field :email,class: "email_sign_up_field" %>
						</div>


						<%= f.submit '確定',class: "btn-orig-edit" %><br>

						<%= link_to "戻る", videos_path(current_user),class: "btn btn-primary btn-block" %>

						<div class="cancel-btn-box">
						<%= link_to "退会", cancel_path,class: "btn btn-info btn-block" %>
						</div>
					</form>
				<% end %>
			</div>
		</div>